@model ContatoModel 
@{
    ViewData["Title"] = "Confirmaão apagar Contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>


<a class="btn btn-primary" role="button" asp-controller="Contatos" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger"role="button" asp-controller="Contatos" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>

