@model ContatoModel
@{
    ViewData["Title"] = "Cadastrar Contato";
}

<div class="text-center">

 
    <h1 class="display-4">Cadastrar Contato</h1>


</div>
<form asp-controller="Contatos" asp-action="Criar" method="post">
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
    @Html.ValidationMessageFor(x => x.Nome)
  </div>

  <div class="form-group">
    <label for="email">E-mail</label>
    <input type="text" asp-for="Email" class="form-control" placeholder="Digite o E-mail">
    @Html.ValidationMessageFor(x => x.Email)
  </div>

  <div class="form-group">
    <label for="celular">Celular</label>
    <input type="text"asp-for="Celular" class="form-control" placeholder="Digite o Celular">
    @Html.ValidationMessageFor(x => x.Celular)
  </div>
  <button type="submit" class="btn btn-primary">Adcionar</button>
  <a class="btn btn-secondary" asp-controller="Contatos" asp-action="Index" role="button">Voltar</a>
</form>
