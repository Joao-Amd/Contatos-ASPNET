@using ControladorContatos.Enum
@using ControladorContatos.Enum
@model UsuarioModel
@{
    ViewData["Title"] = "Cadastrar Contato";
}

<div class="text-center">

 
    <h1 class="display-4">Cadastrar Usuario</h1>


</div>
<form asp-controller="Usuario" asp-action="Criar" method="post">
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
    @Html.ValidationMessageFor(x => x.Nome)
  </div>

  <div class="form-group">
    <label for="email">E-mail</label>
    <input type="text" asp-for="Email" class="form-control" placeholder="Digite o E-mail">
    @Html.ValidationMessageFor(x => x.Email)
  </div>

  <div class="form-group">
    <label for="login">Login</label>
    <input type="text" asp-for="Login" class="form-control" placeholder="Digite o login">
    @Html.ValidationMessageFor(x => x.Login)
  </div>

  <div class="form-group">
    <label for="nome" class="form-label">Perfil</label>
    <select asp-for="Perfil" class="form-control">
        <option value="0">Selecione</option>
        <option value="@PerfilEnum.admin">Administrador</option>
        <option value="@PerfilEnum.padrao">Padrão</option>
    </select>
    @Html.ValidationMessageFor(x => x.Perfil)
  </div>

    <div class="form-group">
    <label for="login">Senha</label>
    <input type="password" asp-for="Senha" class="form-control" placeholder="Digite a senha">
    @Html.ValidationMessageFor(x => x.Senha)
  </div>

  
  <button type="submit" class="btn btn-primary">Adcionar</button>
  <a class="btn btn-secondary" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
</form>
